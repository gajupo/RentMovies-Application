@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>
@Html.ActionLink("New Movie", "New", "Movies", null, new {@class= "btn btn-primary"})
<br/>
<br />
<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function() {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href='/movies/edit/" + movie.id + "'>" + movie.name + "</a>";
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "id",
                        render: function (id) {
                            return "<button class='btn-link js-delete' data-movie-id=" + id + "> Delete</button>";
                        }
                    }
                ]
            });

            //optimize to have one event handler for all delete links in the table customer,
            //passing a filter in the method on as second parameter
            $("#movies").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/movies/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                //remove the tr from the internal data of datatable
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }

                });
            });
        });
    </script>
    
}
